<%= form_with url: search_products_path, method: :get,
              data: { turbo_stream: true },
              id: "search-form", class: "search-container" do |f| %>

  <%= f.text_field :query, value: params[:query], placeholder: "Search my auctions...",
                   id: "search-input", class: "search-input", autocomplete: "off" %>


  <% if @my_search %>
    <%= f.hidden_field :scope, value: "my_auctions" %>
  <% end %>


  <button type="submit" class="search-button">
    <i class="fa-solid fa-magnifying-glass"></i>
  </button>
<% end %>
