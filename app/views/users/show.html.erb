<div class="profile-container">
  <div class="main-profile wrapper">
    <div class="profile">
      <div class="profile-info">
        <div class="profile-image">
          <%= profile_image(@user) %>
        </div>

        <div>
          <h1><%= @user.name %></h1>
          <p><%= @user.email %></p>
        </div>

      </div>

      <div class="wallet">
        <div class="wallet-balance wallet-coins">
     <span class="amount">
       <%= @user.wallet_balance %>
       <i class="fa-solid fa-coins"></i>
     </span>
          <p>Coins Available</p>
        </div>

        <div class="wallet-balance wallet-money">
     <span class="money">
       <%= number_to_currency(@user.total_order_amount, unit: "$") %>
     </span>
          <p>Wallet Balance</p>
        </div>
      </div>


    </div>
    <%= render "update-profile" %>
  </div>

  <%= render "buy-coins" %>

  <%= render "update-password" %>

  <%= render "delete-account" %>
</div>









